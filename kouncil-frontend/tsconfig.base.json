{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@app/common-auth": ["libs/common-auth/src/index.ts"],
      "@app/common-components": ["libs/common-components/src/index.ts"],
      "@app/common-login": ["libs/common-login/src/index.ts"],
      "@app/common-model": ["libs/common-model/src/index.ts"],
      "@app/common-servers": ["libs/common-servers/src/index.ts"],
      "@app/common-utils": ["libs/common-utils/src/index.ts"],
      "@app/feat-confirm": ["libs/feat-confirm/src/index.ts"],
      "@app/feat-favourites": ["libs/feat-favourites/src/index.ts"],
      "@app/feat-no-data": ["libs/feat-no-data/src/index.ts"],
      "@app/feat-send": ["libs/feat-send/src/index.ts"],
      "@app/feat-topic-form": ["libs/feat-topic-form/src/index.ts"],
      "@app/feat-topics": ["libs/feat-topics/src/index.ts"],
      "@app/message-data": ["libs/message-data/src/index.ts"],
      "@app/resend-events": ["libs/resend-events/src/index.ts"],
      "@app/schema-registry": ["libs/schema-registry/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
